.Header__CartDot {
    background-color: #7ED321;
}

i.icon-swym-wishlist {
  font-family: 'swym-icons';
  font-style: normal;
  vertical-align: middle;
}
i.icon-swym-wishlist+span {
  vertical-align: middle;
}
i.icon-swym-wishlist:after {
  content: '';
  font-size: 130%;
  line-height: 18px;
  text-align: center;
  display: inline;
}
/*content rendered after swym is ready to avoid showing block/invalid chars*/
.swym-ready i.icon-swym-wishlist:after {
  content: '\f004';
}

.swym-button-bar {
  .Product__Info & {
    display: none;
  }
}

.ProductForm__AddToCartContainer {
  display: flex;
  align-items: center;
  .ProductForm__AddToCart {
    flex: 1;
  }
}

.custom-wishlist-button.swym-add-to-wishlist-view-product {
  padding: 10px !important;
  border: 1px solid #000 !important;
  font-size: 1.6em !important;
  margin-right: 10px !important;
  &:after {
    color: #000 !important;
  }
  &.swym-added{
    opacity: 1 !important;
    &:after {
      color: #000 !important;
    }
  }
}


//Quickshop
.ProductItem__ImageContainer {
  position: relative;
  &:hover .ProductItem__QuickshopContainer {
    display: block;
  }
}
.ProductItem__QuickshopContainer {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1;
  display: none;
  padding: 20px 10px;
}
.QuickshopProductForm__SubmitButton {
  display: block;
  text-align: center;
  width: 100%;
  background: $button-background;
  color: $button-text-color;
  font-size: 0.8em;
  letter-spacing: 2.4px;
  line-height: 1.2;
  padding: 9px;
  text-transform: uppercase;
  &:disabled {
    cursor: not-allowed;
  }
  &:hover {
    .QuickshopProductForm__SubmitButtonHoverText {
      display: inline;
    }
    .QuickshopProductForm__SubmitButtonText {
      display: none;
    }
  }
}
.QuickShopProductForm__SizeOptionsContainer {
  display: none;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  background: $button-background;
  color: $button-text-color;
  font-size: 0.75em;
  line-height: 1.3;
  letter-spacing: normal;
  margin: 0 0 2px;
  .QuickshopProductForm__OptionsAndButtonContainer:hover &{
    display: flex;
  }
}
.QuickshopProductForm__SizeOption {
  padding: 5px;
  text-transform: uppercase;
}
.QuickshopProductForm__SizeOptionRadio {
  display: none;
}
.QuickshopProductForm__SizeOptionLabel {
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  padding: 4px 6px;
  border:1px solid transparent;
  .QuickshopProductForm__SizeOptionRadio:checked + &{
    border: 1px solid $button-text-color;
  }
  .QuickshopProductForm__SizeOptionRadio:disabled + &{
    text-decoration: line-through;
    cursor:not-allowed;
  }
}
.QuickshopSelect {
  display: none;
}
.QuickshopProductForm__SubmitButtonHoverText {
  display: none;
}
@media only screen and (max-width: 1139px) {
  .QuickShopProductForm__SizeOptionsContainer {
    display: none;
    .QuickshopProductForm__OptionsAndButtonContainer:hover &{
      display: none;
    }
  }
}

@media screen and (min-width: 1140px) {
  .ProductRecommendationsList {
    .Carousel__Cell {
      width: calc(100% / 6);
      padding: 0 10px;
    }
  }
}

