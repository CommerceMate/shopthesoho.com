/* Product Tile */
.ProductItem__Label {
  font-size: 12px;
  text-transform: uppercase;
  font-weight: 700;
  color: #ff0055;
}

/* Header */
.Header:not(.Header--transparent) .HorizontalList__Item.is-expanded .Header__LinkSpacer::after, .Header:not(.Header--transparent) .HorizontalList__Item.is-active .Header__LinkSpacer::after {
  opacity: 0;
  transform: none;
}

/* MegaMenu */
.MegaMenu__Title {
	font-size: 12px;
  font-weight: 700;
	color: #000;
}

/* Filters */
.CollectionFilters .ColorSwatch {
	border: 1px solid currentColor !important;
}


/* Slideshow */
.Header .Text--subdued, .Header .Link--primary, .Header .Link--secondary:hover {
  color: #000;
}

#section-collection-list .CollectionItem .Heading, #section-collection-list .flickity-page-dots {
  // color: #ffffff;
  // font-size: 38px;
	// font-weight: 700;
	// text-transform: uppercase;
	text-shadow: 0 0 12px rgba(0, 0, 0, .5);
}

.flickity-slider {
.SectionHeader__Heading--emphasize {
  font-size: 96px;
	// font-weight: 700;
	// text-transform: uppercase;
	margin: 0 16px 16px 0;
	text-shadow: 0 0 12px rgba(0, 0, 0, .5);
}
}

/* Buttons */
.Button {
  font-weight: 600;
}

/* Sizeswatch */
.SizeSwatch {
  min-height: 36px;
  font-size: 13px;
	font-weight: bold;
}

.SizeSwatch:hover {
	border: 1px solid #000;
}


/* AfterPay*/
.afterpay-link, .afterpay-text3 {
	display: none;
}

.ColorSwatch__Radio {
	border-radius: 25px;
}


/* Sale message */
.ProductMeta__SaleMessageContainer {
  font-family: var(--sale_message_font_family);
  font-weight: var(--sale_message_font_weight);
  font-style: var(--sale_message_font_style);
  font-size: var(--sale_message_font_size);
  color: var(--sale_message_color);
  margin: 24px 0 0;
}
