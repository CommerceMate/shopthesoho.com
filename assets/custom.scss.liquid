// Bold bundles widget styles
.bold-bundles-widget-item__title {
  font-weight: 700;
  font-style: normal;
  color: #000;
  transition: color 0.2s ease-in-out;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  font-size: 12px;
}
.bold-bundles-widget-header__title {
  font-weight: 700;
  font-style: normal;
  color: #000;
  transition: color 0.2s ease-in-out;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  font-size: 14px;
}
.bold-bundles-widget__button {
  width: 100%;
  display: block;
  background: $button-background;
  color: $button-text-color;
  font-weight: 600;
  text-transform: uppercase;
  font-size: 13px;
  text-align: center;
  letter-spacing: 0.2em;
  padding: 14px 28px;
}
.bold-bundles-widget__button--top {
  border-bottom-color: $button-text-color;
}
.bold-bundles-widget__button--bottom {
  border-top-color: $button-text-color;
}
.bold-bundles-widget-item__price--old {
  color: #000;
}
.bold-bundles-widget-item__price--new {
  color: #f05;
}
.bold-bundles-widget-item__price {
  font-weight: 700;
  font-style: normal;
  color: #000;
  transition: color 0.2s ease-in-out;
  letter-spacing: 0.2em;
  text-transform: uppercase;
}
.bold-bundles-widget-item__link {
  max-width: 100%;
}
.bold-bundles-widget-item__variants {
  padding: 10px;
}
.bold-bundles-widget-item-separator {
  background: #000;
}
