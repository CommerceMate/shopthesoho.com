$button-background: {{settings.button_background}};
$button-text-color: {{settings.button_text_color}};

$navigation-background      : {{settings.navigation_background}};
$navigation-text-color      : {{settings.navigation_text_color}};
$navigation-text-color-light: rgba($navigation-text-color, 0.5);
$navigation-border-color    : rgba($navigation-text-color, 0.25);

/* Product Tile */
.ProductItem__Label {
  font-size: 12px;
  text-transform: uppercase;
  font-weight: 700;
  color: #000;
}

.ProductItem__Label--onSale {
  color: #FF0055;
}

/* Header */
.Header:not(.Header--transparent) .HorizontalList__Item.is-expanded .Header__LinkSpacer::after, .Header:not(.Header--transparent) .HorizontalList__Item.is-active .Header__LinkSpacer::after {
  opacity: 0;
  transform: none;
}

/* MegaMenu */
.MegaMenu__Title {
	font-size: 12px;
  	font-weight: 700;
	color: #000;
}

/* Filters */
.CollectionFilters .ColorSwatch {
	border: 1px solid currentColor !important;
}


/* Buttons */
.Button {
  font-weight: 600;
}

/* Sizeswatch */
.SizeSwatch {
  min-height: 36px;
  font-size: 13px;
	font-weight: bold;
}

.SizeSwatch:hover {
	border: 1px solid #000;
}


/* AfterPay*/
.afterpay-link, .afterpay-text3 {
	display: none;
}

.ColorSwatch__Radio {
	border-radius: 25px;
}


/* Sale message */
.ProductMeta__SaleMessageContainer {
  font-family: var(--sale_message_font_family);
  font-weight: var(--sale_message_font_weight);
  font-style: var(--sale_message_font_style);
  font-size: var(--sale_message_font_size);
  color: var(--sale_message_color);
  margin: 24px 0 0;
}

/* Newsletter message */
.ImageHero__ContentOverlay {
    text-shadow: none;
}

.Header__MainNav .HorizontalList li:last-child > .Heading {
    color: #ff0055;
}


/* Cart Drawer */
.Cart__ShippingNotice {
    border-bottom: none;
}

.Drawer__Header--bordered {
    box-shadow: none;
}

.Cart .Drawer__Footer {
  padding: 0 18px 30px 24px;
  @media only screen and (min-width: 641px) {
    padding: 0 30px 30px 30px;
  }
}

.Drawer__Footer {
    box-shadow: none;
}

/* Slideshow */
.flickity-slider {
.SectionHeader__Heading--emphasize {
	margin: 0 16px 16px 0;
	text-shadow: 0 0 12px rgba(0, 0, 0, .5);
}
}


/* Collection Tile*/
.CollectionItem__Content--bottomCenter {
    bottom: 20px;
}

